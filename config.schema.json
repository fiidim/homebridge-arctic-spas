{
  "pluginAlias": "ArcticSpasPlatform",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "headerDisplay": "All enabled devices below will be loaded as accessories.\nYou must have an Arctic Spas Hot Tub and an API KEY for this plugin to work.  You will need to go to [My Arctic Spas](https://www.myarcticspa.com/spa/SpaAPIManagement.aspx) website, Login and request an API key first.",
  "footerDisplay": "See the [homebridge-arctic-spas](https://github.com/fiidim/homebridge-arctic-spas) developer page for detailed documentation, and to submit feature requests and bug reports.",
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "name": { "title": "Name", "type": "string", "default": "Arctic Spas" },
      "apiKey": {
        "title": "X-API-KEY",
        "type": "string",
        "required": true
      },
      "pollIntervalSeconds": {
        "title": "Poll Interval (seconds)",
        "type": "number",
        "default": 60,
        "minimum": 15
      },
      "useFahrenheitDisplay": {
        "title": "Display temperature in Fahrenheit",
        "type": "boolean",
        "default": false
      },
      "enableLights": {
        "title": "Enable Lights",
        "type": "boolean",
        "default": true
      },
      "enablePump1": {
        "title": "Enable Pump 1",
        "type": "boolean",
        "default": true
      },
      "enablePump2": {
        "title": "Enable Pump 2",
        "type": "boolean",
        "default": true
      },
      "enablePump3": {
        "title": "Enable Pump 3",
        "type": "boolean",
        "default": true
      },
      "enablePump4": {
        "title": "Enable Pump 4",
        "type": "boolean",
        "default": false
      },
      "enablePump5": {
        "title": "Enable Pump 5",
        "type": "boolean",
        "default": false
      },
      "enablePh": {
        "title": "Enable pH Tile",
        "type": "boolean",
        "default": true
      },
      "enableOrp": {
        "title": "Enable ORP Tile",
        "type": "boolean",
        "default": true
      },
      "enableBlower1": {
        "title": "Enable Blower 1",
        "type": "boolean",
        "default": true
      },
      "enableBlower2": {
        "title": "Enable Blower 2",
        "type": "boolean",
        "default": true
      },
      "enableEasyMode": {
        "title": "Enable Easy Mode",
        "type": "boolean",
        "default": true
      },
      "enableSds": {
        "title": "Enable SDS",
        "type": "boolean",
        "default": true
      },
      "enableYess": {
        "title": "Enable YESS",
        "type": "boolean",
        "default": true
      },
      "enableFogger": {
        "title": "Enable Fogger",
        "type": "boolean",
        "default": true
      }
    },
    "required": ["name", "apiKey"]
  },
    "layout": [
    {
      "type": "section",
      "title": "General",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "description": "Enter your Arctic Spas credentials here.",
          "items": [
            "apiKey",
            "name",
            "pollIntervalSeconds"
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Pumps",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "description": "Pumps and Lights configuration.  Choose only the pumps that exist on your hot tub.",
          "items": [
            "enableLights",
            "enablePump1",
            "enablePump2",
            "enablePump3",
            "enablePump4",
            "enablePump5",
            "enableEasyMode"
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Spaboy",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "description": "Spaboy configuration.  Choose only the features that exist on your hot tub.",
          "items": [
            "enablePh",
            "enableOrp",
            "useFahrenheitDisplay"
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Other Features",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "description": "Other configuration.  Choose only the features that exist on your hot tub.",
          "items": [
            "enableBlower1",
            "enableBlower2",
            "enableSds",
            "enableYess",
            "enableFogger"
          ]
        }
      ]
    }
  ]
}
